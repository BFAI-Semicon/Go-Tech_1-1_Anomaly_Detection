{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ruff Check",
      "type": "shell",
      "command": "cd LeadersBoard && ruff check . && ruff format --check .",
      "problemMatcher": []
    },
    {
      "label": "Ruff Fix",
      "type": "shell",
      "command": "cd LeadersBoard && ruff check --fix . && ruff format .",
      "problemMatcher": []
    },
    {
      "label": "Unit Tests",
      "type": "shell",
      "command": "cd LeadersBoard && pytest tests/unit --maxfail=1",
      "problemMatcher": []
    },
    {
      "label": "Markdown Check",
      "type": "shell",
      "command": "pymarkdown scan .",
      "problemMatcher": []
    },
    {
      "label": "Markdown Fix",
      "type": "shell",
      "command": "pymarkdown fix .",
      "problemMatcher": []
    }
  ]
}
